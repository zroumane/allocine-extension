{
  "manifest_version": 2,
  "name": "Allociné.fr",
  "description": "Faites des recherches sur Allociné plus simplement",
  "version": "1.6",
  "background": {
    "scripts": ["browser-polyfill.min.js", "background.js"],
    "persistent": true
  },
  "icons": { 
    "16": "icon/allocine_16.png",
    "32": "icon/allocine_32.png",
    "128": "icon/allocine_128.png"
  },
	"browser_action": {
		"default_icon": "icon/allocine_128.png",
		"default_title": "Allociné"
  },
  "omnibox": { "keyword" : "ac" },
  "permissions": [
    "contextMenus",
    "activeTab"
  ]
}
